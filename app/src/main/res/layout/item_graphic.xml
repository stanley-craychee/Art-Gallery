<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_graphic_item_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/image_view_graphic_icon"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                tools:src="@drawable/general_button_background_image" />

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/text_view_graphic_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_view_graphic_item_container"
            android:layout_margin="12dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            tools:text="Graphic Title" />

        <TextView
            android:id="@+id/text_view_graphic_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_graphic_title"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="18dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:textColor="#B6B6B6"
            android:textSize="14sp"
            tools:text="Graphic Description" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>