<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_music_item_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/image_view_music_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                tools:src="@drawable/general_button_background_image" />

            <Button
                android:id="@+id/button_play_music"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="#00000000"
                android:foreground="@drawable/transparent_play_button" />
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/text_view_song_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/card_view_music_item_container"
            android:layout_toEndOf="@id/card_view_music_item_container"
            android:fontFamily="sans-serif-medium"
            android:textColor="#FFFFFF"
            android:layout_marginRight="12dp"
            android:textSize="18sp"
            tools:text="Song Title" />

        <TextView
            android:id="@+id/text_view_song_bpm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_song_title"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/card_view_music_item_container"
            android:fontFamily="sans-serif-light"
            android:textColor="#B6B6B6"
            android:textSize="14sp"
            tools:text="Song BPM" />

        <TextView
            android:id="@+id/text_view_song_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_song_title"
            android:layout_marginTop="4dp"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@id/text_view_song_bpm"
            android:fontFamily="sans-serif-light"
            android:textColor="#B6B6B6"
            android:textSize="14sp"
            tools:text="Song Key" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>